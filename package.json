{
  "name": "simple-server-skeleton",
  "version": "1.0.0",
  "description": "test rest api",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "copydist": "cp -r ./app/views ./dist && cp -r ./app/public ./dist",
    "build": "npm run clean && npm run copydist && babel -d ./dist ./app --ignore node_modules,public,views --presets es2015,stage-2 --no-comments --compact true",
    "start": "nodemon app/app-ES6.js --exec babel-node --presets es2015,stage-2",
    "serve": "nodemon app.js",

    "build-css": "node-sass scss/app.scss public/css/app.css",

    "data:rollback": "knex migrate:rollback",
    "data:latest": "knex migrate:latest",
    "data:seed": "knex seed:run",
    "data:reload": "npm run data:rollback && npm run data:latest && npm run data:seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raidenz/simple-server-skeleton.git"
  },
  "keywords": [
    "bookshelfjs",
    "mysql",
    "express"
  ],
  "author": "Raidenz",
  "license": "MIT",
  "dependencies": {
    "babel-node": "^6.5.3",
    "babel-polyfill": "^6.23.0",
    "bcryptjs": "^2.4.0",
    "body-parser": "^1.16.0",
    "bookshelf": "^0.10.3",
    "bookshelf-bcrypt": "^2.1.0",
    "bookshelf-slug": "^0.3.2",
    "express": "^4.14.0",
    "jwt-simple": "^0.5.1",
    "knex": "^0.12.6",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "multer": "^1.3.0",
    "mysql": "^2.13.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pug": "^2.0.0-beta6",
    "sqlite3": "^3.1.8",
    "when": "^3.7.7"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "faker": "^3.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
